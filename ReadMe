│   │   ├── validate.middleware.ts
│   │   └── error.middleware.ts
│   │
│   ├── utils/           # Shared utilities
│   │   ├── jwt.ts
│   │   ├── password.ts
│   │   ├── response.ts
│   │   └── logger.ts
│   │
│   ├── modules/         # Feature-based modules
│   │   ├── user/
│   │   │   ├── user.routes.ts
│   │   │   ├── user.controller.ts
│   │   │   ├── user.service.ts
│   │   │   ├── user.validator.ts
│   │   │   └── user.model.ts
│   │   │
│   │   ├── auth/
│   │   │   ├── auth.routes.ts
│   │   │   ├── auth.controller.ts
│   │   │   ├── auth.service.ts
│   │   │   ├── auth.validator.ts
│   │   │   └── auth.model.ts
│   │   │
│   │   ├── product/
│   │   │   ├── product.routes.ts
│   │   │   ├── product.controller.ts
│   │   │   ├── product.service.ts
│   │   │   ├── product.validator.ts
│   │   │   └── product.model.ts
│   │   │
│   │   └── index.ts     # Exports all module routes
│   │
│   ├── app.ts           # Express app config (middlewares + routes)
│   └── server.ts        # Start server (and connect DB)
│
├── tests/               # Unit & integration tests
│── .env
